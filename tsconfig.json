{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@@/*": [
        "test/*"
      ]
    }
  },
  "include": [
    "src",
    "test",
    "*.config.cjs",
    "*.config.mjs",
    "*.config.js",
    ".*rc.cjs",
    ".*rc.mjs",
    ".*rc.js",
    "*.config.ts"
  ]
}